<ScreenOne>:
    name: 'one'
    Label:
        text: 'Screen 1'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .20
        Button:
            text: 'Previous'
            on_press:
                app.root.transition.direction = 'right'
                app.root.transition.duration = 1
                app.root.current= 'three'

        Button:
            text: 'Next'
            on_press:
                app.root.transition.direction = 'left'
                app.root.transition.duration = 1
                app.root.current= 'two'

