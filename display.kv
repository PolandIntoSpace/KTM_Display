<My_manager>:
    ScreenOne:
    ScreenTwo:
    ScreenThree:

<ScreenOne>:
    name: 'one'
    Label:
        id: status_label
        text: root.status
        #text: "GO!"
        pos: -220, 80
        font_size: 100

    BoxLayout:
        canvas:
            #id: ampel_zeichnung
            Color:
                rgb: root.ampel_oben
            Ellipse:
                #rgb: 1,2,1
                size: 120, 120
                #pos: self.center_x, self.center_y
                pos: 340, 440

            Color:
                rgb: root.ampel_mitte
            Ellipse:
                size: 120, 120
                #pos: self.center_x, self.center_y
                pos: 340, 320

            Color:
                rgb: root.ampel_unten
            Ellipse:
                size: 120, 120
                #pos: self.center_x, self.center_y
                pos: 340, 200

    Label:
        id: time_label
        #text: "17s"
        text: str(root.time) + "s"
        pos: 200, 80
        font_size: 100

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .20
        Button:
            text: 'Previous'
            on_press:
                app.root.transition.direction = 'right'
                app.root.transition.duration = 1
                app.root.current= 'three'

        Button:
            text: 'Next'
            on_press:
                app.root.transition.direction = 'left'
                app.root.transition.duration = 1
                app.root.current= 'two'

<ScreenTwo>:
    name: 'two'
    Label:
        id: speed_label
        text: root.speed
        pos: 0, 80
        font_size: 140
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .20
        Button:
            text: 'Previous'
            on_press:
                app.root.transition.direction = 'right'
                app.root.transition.duration = 1
                app.root.current= 'one'

        Button:
            text: 'Next'
            on_press:
                app.root.transition.direction = 'left'
                app.root.transition.duration = 1
                app.root.current= 'three'

<ScreenThree>:
    name: 'three'
    Label:
        id: capacity_label
        text: root.capacity
        pos: 0, 80
        font_size: 140
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .20

        Button:
            text: 'Previous'
            on_press:
                app.root.transition.direction = 'right'
                app.root.transition.duration = 1
                app.root.current= 'two'

        Button:
            text: 'Next'
            on_press:
                app.root.transition.direction = 'left'
                app.root.transition.duration = 1
                app.root.current= 'one'
